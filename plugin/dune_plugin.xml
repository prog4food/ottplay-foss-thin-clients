<dune_plugin>
  <name>ottplay_foss</name>
  <caption>OTT-play FOSS</caption>
  <entry_points>
    <entry_point>
        <parent_media_url>root://tv</parent_media_url>
        <media_url>ottplay_foss</media_url>
        <caption>OTT-play FOSS</caption>
        <icon_url>plugin_file://icon.png</icon_url>
        <actions>
          <key_enter>
            <type>launch_media_url</type>
            <data>
              <url>www://http://ott.prog4food.eu.org/f/dunehd/:::fullscreen=1&amp;webapp_keys=1&amp;zoom_level=100&amp;overscan=0&amp;background_color=black&amp;exit_key=&amp;volume_handler=0&amp;osd_size=1280x720</url>
            </data>
          </key_enter>
        </actions>
        <ip_address_required>yes</ip_address_required>
        <show_by_default>yes</show_by_default>
    </entry_point>
  </entry_points>
  <type>php</type>
  <params>
     <program>main.php</program>
  </params>
</dune_plugin>
